pkgname=ttf-freebanglafont
pkgver=20130212
pkgrel=2
pkgdesc='Bengali fonts'
url='http://www.ekushey.org/'
license=('GPL')
arch=('any')
depends=('xorg-fonts-encodings' 'xorg-font-utils' 'fontconfig')

install=install

package() {
	cd "${srcdir}"
	for i in *.ttf; do
		install -Dm644 "${i}" "${pkgdir}/usr/share/fonts/TTF/${i}.ttf"
	done
}

